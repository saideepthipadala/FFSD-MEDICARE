<!-- views/admin.ejs -->

<!DOCTYPE html>
<html>

<head>
  <title>All Users</title>
  <link rel="stylesheet" href="/css/admin_verif_style.css">
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-GLhlTQ8iRABdZLl6O3oVMWSktQOp6b7In1Zl3/Jr59b6EGGoI1aFkw7cmDA6j6gD" crossorigin="anonymous" />
</head>

<body style=" background-color: #f6f1f1;">


  <div class="logo-div">
    <a href="/"><img style="margin-left: 20px;width: 186px;" src="images/Medicare.png" alt="" /></a>
    <h1>ALL USERS</h1>
    <a href="/" id="home-link">BACK</a>
  </div>



  <table>
    <tr style="text-align: center;">
      <th>S.No</th>
      <th>ID</th>
      <th>Type</th>
      <th>Name</th>
      
    </tr>
    <% let count = 1; %>

        


    <% doctors.forEach(doctor => { %>
      
    <tr class="doctors">
      <td style="text-align: center;"><%= count %></td>
      <td style="text-align: center;"><%= doctor._id %></td>
      <td style="text-align: center;"><%= doctor.registrationType %></td>
      <td style="text-align: center;"><%= doctor.name %></td>

    </tr>
    <% count++ ;%>
    <% }) %>



    <% users.forEach(user=> { %>
    <tr class="users">
      <td style="text-align: center;"><%= count %></td>
      <td style="text-align: center;"><%= user._id %></td>
       <td style="text-align: center;"><%= user.role %></td>
      <td style="text-align: center;"><%= user.fullname %></td>

    </tr>
    <% count++;%>
    <% }) %>



  </table>
<script src="/js/all_users.js"></script>
</body>

</html>
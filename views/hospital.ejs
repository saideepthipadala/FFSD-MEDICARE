<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Hospitals</title>
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/css/bootstrap.min.css"
      rel="stylesheet">
    <link rel="stylesheet"
      href="https://cdn.jsdelivr.net/npm/swiper@9/swiper-bundle.min.css" />
    <link
      href="https://cdn.jsdelivr.net/gh/hung1001/font-awesome-pro-v6@44659d9/css/all.min.css"
      rel="stylesheet" type="text/css"/>
    <link href="/css/style_home_page.css" rel="stylesheet" />
    <link href="/css/hospital_card.css" rel="stylesheet" />

  </head>
  <body>


    <header class="header">
      <a href="/">
        <img src="./images/Medicare.png" class="logo" alt="header-logo" />
      </a>
      <nav class="main-nav">
        <ul class="main-nav-list">
          <li>

            <div class="search-box">
              <h4><i class="fa-solid fa-magnifying-glass fa-lg"></i></h4>
              <input type="text" style="height:52.9091px" id="search" placeholder="Search for hospitals...">
              <span>Search</span>
            </div>
          </li>


          <li style="margin-top: 20px;" ><a class="main-nav-link" style="color: #fff;" href="/contact_us">Contact us</a></li>
          <li style="margin-top: 20px;">
            <a class="main-nav-link main-nav-link-lc" href="/">Home</a>
          </li>
        </ul>
      </nav>
    </header>


    <main>
      <section class="Hospital-cards">
        <div class="container grid grid--3--cols">

          <% HospitalDetails.map((h)=> { %>
            <figure class="card">
              <div class="card-img">
                <img
                  src="./images/Hospital_how_it_work.jpg"
                  class="hospital_card-img"
                  />
              </div>
              <div class="card-text-hospital">
                <div class="hospital-name"><h1> <%= h.name %> </h1> </div>
                  <div class="address-hospital">
                    <p>Address : <%= h.location%></p>
                    </div>
                    <div class="contact-detail">
                      <p>Phone no. : <%= h.contactNumber%></p>
                      </div>
                      <div class="email-id-hospital">
                        <p>Email : <%= h.email %></p>
                        </div>
                        <div class="noOfDoctors"><p>Number of Doctors : <%=
                              h.noOfDoctors %></p></div>
                        </div>

                        30
                        







                      </figure>
                      
                      <% }); %>

                      
                      </div>
                    </section>
                  </main>


                  
                  <footer class="footer" id="footer">
                    <div class="container grid grid-footer">
                      <div class="logo-col">
                        <a href="/" class="footer-logo">
                          <img alt="logo" src="./images/Header_logo.png"
                            class="logo" />
                        </a>
                        <ul class="social-links">
                          <li>
                            <a class="footer-link href="#">
                              <ion-icon class="social-icon"
                                name="logo-instagram"></ion-icon>
                            </a>
                          </li>
                          <li>
                            <a class="footer-link href="#">
                              <ion-icon class="social-icon"
                                name="logo-instagram"></ion-icon>
                            </a>
                          </li>
                          <li>
                            <a class="footer-link href="#">
                              <ion-icon class="social-icon" name="logo-twitter"></ion-icon>
                            </a>
                          </li>
                        </ul>
                        <p class="copy-right">
                          Copyright &copy; 2023 by Medicare, Inc.
                          All rights are reserved.
                        </p>
                      </div>
                      <div class="address-col">
                        <p class="footer-heading">Contact us</p>
                        <address class="contacts">
                          <p class="address">623 Star streets St., 2nd Floor,
                            New Delhi</p>
                          <p>
                            <a class="footer-link" href="tel:415-201-6370">415-201-6370</a><br
                              />
                            href="mailto:hello@omnifood.com">hello@medicare.com</a>
                        </p>
                      </address>

                    </div>
                    <nav class="nav-col">
                      <p class="footer-heading">Company</p>
                      <ul class="footer-nav">
                        <li><a class="footer-link" href="/about_page">About
                            Medicare</a></li>
                        <li><a class="footer-link" href="/hospital">Near by
                            hospitals</a></li>
                        <li><a class="footer-link" href="/pharmacy">Near by
                            pharmacies</a></li>

                      </ul>
                    </nav>
                  </div>
                </footer>

        
              <script src="./js/hospital.js"></script>
              </body>
            </html>
